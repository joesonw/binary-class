{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "baseUrl": "./src",
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "*": ["*"]
        }
    },
    "compileOnSave": false,
    "include": [
        "./src/**/*",
        "./src/**/*.d.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}
